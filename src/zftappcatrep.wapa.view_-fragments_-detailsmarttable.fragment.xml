<core:FragmentDefinition xmlns="sap.m"                                                                                                                                                                                                                         
    xmlns:table="sap.ui.table"                                                                                                                                                                                                                                 
    xmlns:core="sap.ui.core"                                                                                                                                                                                                                                   
    xmlns:smartTable="sap.ui.comp.smarttable">                                                                                                                                                                                                                 
    <smartTable:SmartTable header="{i18n>detail.title}"                                                                                                                                                                                                        
        entitySet="CatalogSet"                                                                                                                                                                                                                                 
        showFullScreenButton="true"                                                                                                                                                                                                                            
        enableAutoBinding="false"                                                                                                                                                                                                                              
        useVariantManagement="false"                                                                                                                                                                                                                           
        useExportToExcel="true"                                                                                                                                                                                                                                
        showRowCount="true"                                                                                                                                                                                                                                    
        useTablePersonalisation="true"                                                                                                                                                                                                                         
        showTablePersonalisation="false"                                                                                                                                                                                                                       
        tableType="Table"                                                                                                                                                                                                                                      
        noData="{                                                                                                                                                                                                                                              
            parts: ['IsAvailable', 'DownloadStatus', 'CatDownloadInProgress', 'view>/tableDataReceived'],                                                                                                                                                      
            formatter: '.noDataTextFormatter'                                                                                                                                                                                                                  
        }"                                                                                                                                                                                                                                                     
        beforeRebindTable="onBeforeRebindTable"                                                                                                                                                                                                                
        dataReceived="onTableDataReceived">                                                                                                                                                                                                                    
        <table:Table visibleRowCountMode="Auto"                                                                                                                                                                                                                
            selectionMode="None"                                                                                                                                                                                                                               
            growing="true"                                                                                                                                                                                                                                     
            growingScrollToLoad="true"                                                                                                                                                                                                                         
            growingThreshold="100"                                                                                                                                                                                                                             
            noData="{                                                                                                                                                                                                                                          
                parts: ['IsAvailable', 'DownloadStatus', 'CatDownloadInProgress', 'view>/tableDataReceived'],                                                                                                                                                  
                formatter: '.noDataTextFormatter'                                                                                                                                                                                                              
            }" />                                                                                                                                                                                                                                              
        <smartTable:customToolbar>                                                                                                                                                                                                                             
            <Toolbar>                                                                                                                                                                                                                                          
                <content>                                                                                                                                                                                                                                      
                    <ToolbarSpacer />                                                                                                                                                                                                                          
                    <Button icon="sap-icon://decline"                                                                                                                                                                                                          
                        tooltip="{i18n>common.buttons.close}"                                                                                                                                                                                                  
                        press=".onClosePress" />                                                                                                                                                                                                               
                    <Button icon="sap-icon://sort"                                                                                                                                                                                                             
                        tooltip="Sort"                                                                                                                                                                                                                         
                        press="onSortPress" />                                                                                                                                                                                                                 
                    <Button icon="sap-icon://refresh"                                                                                                                                                                                                          
                        tooltip="{i18n>common.buttons.refresh}"                                                                                                                                                                                                
                        visible="{= ${IsAvailable} &amp;&amp; ${CatDownloadInProgress}}"                                                                                                                                                                       
                        press=".onRefreshPress" />                                                                                                                                                                                                             
                </content>                                                                                                                                                                                                                                     
            </Toolbar>                                                                                                                                                                                                                                         
        </smartTable:customToolbar>                                                                                                                                                                                                                            
    </smartTable:SmartTable>                                                                                                                                                                                                                                   
</core:FragmentDefinition>                                                                                                                                                                                                                                     