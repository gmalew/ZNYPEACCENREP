<mvc:View controllerName="nype.ft.ac.controller.Systems"                                                                                                                                                                                                       
    xmlns:mvc="sap.ui.core.mvc"                                                                                                                                                                                                                                
    xmlns:l="sap.ui.layout"                                                                                                                                                                                                                                    
    xmlns:uxap="sap.uxap"                                                                                                                                                                                                                                      
    xmlns:core="sap.ui.core"                                                                                                                                                                                                                                   
    xmlns="sap.m">                                                                                                                                                                                                                                             
    <l:FixFlex minFlexSize="400">                                                                                                                                                                                                                              
        <l:fixContent>                                                                                                                                                                                                                                         
            <l:VerticalLayout class="sapUiSmallMargin">                                                                                                                                                                                                        
                <ObjectAttribute title="{i18n>search.field.semanticObject}"                                                                                                                                                                                    
                    text="{view>/semanticObject}" />                                                                                                                                                                                                           
                <ObjectAttribute title="{i18n>search.field.semanticAction}"                                                                                                                                                                                    
                    text="{view>/semanticAction}" />                                                                                                                                                                                                           
            </l:VerticalLayout>                                                                                                                                                                                                                                
        </l:fixContent>                                                                                                                                                                                                                                        
        <l:flexContent>                                                                                                                                                                                                                                        
            <Page showHeader="false">                                                                                                                                                                                                                          
                <content>                                                                                                                                                                                                                                      
                    <List id="systems"                                                                                                                                                                                                                         
                        busyIndicatorDelay="0"                                                                                                                                                                                                                 
                        items="{                                                                                                                                                                                                                               
                            path: '/SystemSet',                                                                                                                                                                                                                
                            events: {                                                                                                                                                                                                                          
                                dataReceived: '.onDataReceived'                                                                                                                                                                                                
                            }                                                                                                                                                                                                                                  
                        }"                                                                                                                                                                                                                                     
                        mode="SingleSelectMaster"                                                                                                                                                                                                              
                        selectionChange="onSelectionChange">                                                                                                                                                                                                   
                        <StandardListItem title="{Sid}"                                                                                                                                                                                                        
                            description="{Info}"                                                                                                                                                                                                               
                            info="{                                                                                                                                                                                                                            
                                parts: ['CatDownloadLastUpdate', 'IsAvailable', 'DownloadStatus', 'Sid', 'app>/systems'],                                                                                                                                      
                                formatter: '.lastUpdateFormatter'                                                                                                                                                                                              
                            }" />                                                                                                                                                                                                                              
                    </List>                                                                                                                                                                                                                                    
                </content>                                                                                                                                                                                                                                     
            </Page>                                                                                                                                                                                                                                            
        </l:flexContent>                                                                                                                                                                                                                                       
    </l:FixFlex>                                                                                                                                                                                                                                               
</mvc:View>                                                                                                                                                                                                                                                    