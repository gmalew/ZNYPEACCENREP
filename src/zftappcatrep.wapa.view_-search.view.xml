<mvc:View controllerName="nype.ft.ac.controller.Search"                                                                                                                                                                                                        
    xmlns:mvc="sap.ui.core.mvc"                                                                                                                                                                                                                                
    xmlns:core="sap.ui.core"                                                                                                                                                                                                                                   
    xmlns="sap.m"                                                                                                                                                                                                                                              
    xmlns:form="sap.ui.layout.form">                                                                                                                                                                                                                           
    <Page enableScrolling="true"                                                                                                                                                                                                                               
        showFooter="false"                                                                                                                                                                                                                                     
        id="searchPage">                                                                                                                                                                                                                                       
        <headerContent>                                                                                                                                                                                                                                        
            <core:Fragment fragmentName="nype.ft.ac.view.fragments.Logo"                                                                                                                                                                                       
                type="XML" />                                                                                                                                                                                                                                  
        </headerContent>                                                                                                                                                                                                                                       
        <form:Form editable="true">                                                                                                                                                                                                                            
            <form:layout>                                                                                                                                                                                                                                      
                <form:ResponsiveGridLayout labelSpanXL="4"                                                                                                                                                                                                     
                    labelSpanL="3"                                                                                                                                                                                                                             
                    labelSpanM="4"                                                                                                                                                                                                                             
                    labelSpanS="12"                                                                                                                                                                                                                            
                    adjustLabelSpan="false"                                                                                                                                                                                                                    
                    emptySpanXL="0"                                                                                                                                                                                                                            
                    emptySpanL="4"                                                                                                                                                                                                                             
                    emptySpanM="0"                                                                                                                                                                                                                             
                    emptySpanS="0"                                                                                                                                                                                                                             
                    columnsXL="2"                                                                                                                                                                                                                              
                    columnsL="1"                                                                                                                                                                                                                               
                    columnsM="1"                                                                                                                                                                                                                               
                    singleContainerFullSize="false" />                                                                                                                                                                                                         
            </form:layout>                                                                                                                                                                                                                                     
            <form:formContainers>                                                                                                                                                                                                                              
                <form:FormContainer>                                                                                                                                                                                                                           
                    <form:formElements>                                                                                                                                                                                                                        
                        <form:FormElement label="">                                                                                                                                                                                                            
                            <form:fields>                                                                                                                                                                                                                      
                                <HBox justifyContent="Center">                                                                                                                                                                                                 
                                    <Text text="{i18n>search.info}" />                                                                                                                                                                                         
                                </HBox>                                                                                                                                                                                                                        
                            </form:fields>                                                                                                                                                                                                                     
                        </form:FormElement>                                                                                                                                                                                                                    
                                                                                                                                                                                                                                                               
                        <form:FormElement label="{i18n>search.field.semanticObject}">                                                                                                                                                                          
                            <form:fields>                                                                                                                                                                                                                      
                                <Input value="{view>/semanticObject}"                                                                                                                                                                                          
                                    valueLiveUpdate="true" />                                                                                                                                                                                                  
                            </form:fields>                                                                                                                                                                                                                     
                        </form:FormElement>                                                                                                                                                                                                                    
                                                                                                                                                                                                                                                               
                        <form:FormElement label="{i18n>search.field.semanticAction}">                                                                                                                                                                          
                            <form:fields>                                                                                                                                                                                                                      
                                <Input value="{view>/semanticAction}"                                                                                                                                                                                          
                                    valueLiveUpdate="true" />                                                                                                                                                                                                  
                            </form:fields>                                                                                                                                                                                                                     
                        </form:FormElement>                                                                                                                                                                                                                    
                                                                                                                                                                                                                                                               
                        <form:FormElement label="">                                                                                                                                                                                                            
                            <form:fields>                                                                                                                                                                                                                      
                                <HBox justifyContent="End">                                                                                                                                                                                                    
                                    <Button type="Emphasized"                                                                                                                                                                                                  
                                        text="{i18n>common.buttons.search}"                                                                                                                                                                                    
                                        enabled="{= ${view>/semanticAction} !== '' &amp;&amp; ${view>/semanticObject} !== ''}"                                                                                                                                 
                                        press="onSearchPress" />                                                                                                                                                                                               
                                </HBox>                                                                                                                                                                                                                        
                            </form:fields>                                                                                                                                                                                                                     
                        </form:FormElement>                                                                                                                                                                                                                    
                    </form:formElements>                                                                                                                                                                                                                       
                </form:FormContainer>                                                                                                                                                                                                                          
            </form:formContainers>                                                                                                                                                                                                                             
        </form:Form>                                                                                                                                                                                                                                           
        <footer>                                                                                                                                                                                                                                               
            <Toolbar>                                                                                                                                                                                                                                          
                <content>                                                                                                                                                                                                                                      
                    <Button id="popoverButton"                                                                                                                                                                                                                 
                        icon="sap-icon://message-warning"                                                                                                                                                                                                      
                        press="handlePopoverPress"/>                                                                                                                                                                                                           
                    <ToolbarSpacer />                                                                                                                                                                                                                          
                </content>                                                                                                                                                                                                                                     
            </Toolbar>                                                                                                                                                                                                                                         
        </footer>                                                                                                                                                                                                                                              
    </Page>                                                                                                                                                                                                                                                    
</mvc:View>                                                                                                                                                                                                                                                    