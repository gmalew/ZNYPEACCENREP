<core:FragmentDefinition xmlns="sap.m"                                                                                                                                                                                                                         
    xmlns:core="sap.ui.core">                                                                                                                                                                                                                                  
    <Dialog title="{errorDialog>/title}">                                                                                                                                                                                                                      
        <endButton>                                                                                                                                                                                                                                            
            <Button text="{i18n>common.buttons.close}" />                                                                                                                                                                                                      
        </endButton>                                                                                                                                                                                                                                           
        <content>                                                                                                                                                                                                                                              
            <VBox class="sapUiSmallMargin">                                                                                                                                                                                                                    
                <FormattedText htmlText="{errorDialog>/text}" />                                                                                                                                                                                               
            </VBox>                                                                                                                                                                                                                                            
        </content>                                                                                                                                                                                                                                             
    </Dialog>                                                                                                                                                                                                                                                  
</core:FragmentDefinition>                                                                                                                                                                                                                                     